{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "types",
        "emitDeclarationOnly": true,
        "stripInternal": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
}