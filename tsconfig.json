{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": ".",
        "outDir": ".",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}