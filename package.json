{
  "name": "typed-message-transport",
  "version": "0.5.9",
  "scripts": {
    "lint:es": "eslint src/*.ts",
    "lint:ox": "oxlint ./src",
    "lint": "concurrently npm:lint:es npm:lint:ox",
    "build": "tsc && esbuild src/superJSON.ts --bundle --outfile=superJSON.js --format=cjs",
    "extractTypes": "npx tsc -p tsconfig.dts.json && npx api-extractor run --local",
    "test": "npm run build && jest --preset ts-jest",
    "prepublishOnly": "npm run lint && npm run build && npm test && npm run extractTypes"
  },
  "dependencies": {
    "events": "^3.3.0",
    "jsbi": "^4.3.2",
    "snappyjs": "^0.7.0",
    "superjson": "^2.2.6"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.2",
    "@types/chai": "^5.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/snappyjs": "^0.7.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.0",
    "flatted": "^3.3.3",
    "jest": "^30.2.0",
    "oxlint": "^1.33.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "files": [
    "types",
    "*.js",
    "*.d.ts",
    "tsdoc-metadata.json",
    "README.md"
  ]
}
