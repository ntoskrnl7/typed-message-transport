{
  "name": "typed-message-transport",
  "version": "0.5.7",
  "scripts": {
    "lint:es": "eslint src/*.ts",
    "lint:ox": "oxlint ./src",
    "lint": "concurrently npm:lint:es npm:lint:ox",
    "build": "tsc --target ES2015 && esbuild src/superJSON.ts --bundle --target=ES2015 --outfile=superJSON.js --platform=node",
    "extractTypes": "npx tsc -p tsconfig.dts.json && npx api-extractor run --local",
    "test": "npm run build && jest --preset ts-jest",
    "prepublishOnly": "npm run lint && npm run build && npm test && npm run extractTypes"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "jsbi": "^4.3.2",
    "snappyjs": "^0.7.0",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.13",
    "@types/chai": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/snappyjs": "^0.7.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "flatted": "^3.3.3",
    "jest": "^30.1.3",
    "oxlint": "^1.18.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "files": [
    "types",
    "*.js",
    "*.d.ts",
    "tsdoc-metadata.json",
    "README.md"
  ]
}
